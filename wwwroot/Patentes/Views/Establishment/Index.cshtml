@model IEnumerable<EstablishmentViewModel>
@using SYGESTMunicipal.Areas.PATENTES.Models.ViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutTransactions.cshtml";
}
<br />
<br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Lista de Establecimientos</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    @*//Vista del filtro*@
    <div class="row">
        <div class="col-12 text-right">
            <partial name="_Filter" />
        </div>
    </div>

    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>@Html.DisplayNameFor(m => m.Id)</th>
                    <th>@Html.DisplayNameFor(m => m.Name)</th>
                    <th>@Html.DisplayNameFor(m => m.CIIUName)</th>
                    <th>@Html.DisplayNameFor(m => m.Description)</th>
                    <th>@Html.DisplayNameFor(m => m.WorkingHours)</th>
                    <th>@Html.DisplayNameFor(m => m.EstablishmentTypeName)</th>
                </tr>
                @foreach (var item in Model)
                {
            <tr>
                <td>@Html.DisplayFor(m => item.Id)</td>
                <td>@Html.DisplayFor(m => item.Name)</td>
                <td>@Html.DisplayFor(m => item.CIIUName)</td>
                <td>@Html.DisplayFor(m => item.Description)</td>
                <td>@Html.DisplayFor(m => item.WorkingHours)</td>
                <td>@Html.DisplayFor(m => item.EstablishmentTypeName)</td>
                <td>
                    <partial name="_TableButtonPartial2" model="item.Id" />
                </td>
            </tr>
                }
            </table>
        }
        else
        {
            <h3 style="color:red;">No existen establecimientos registrados...</h3>
        }
    </div>
</div>
